@model FootbalManager_UIL.CPEJoueurViewModel

@{
    ViewBag.Title = "GetJoueur";
}

<h2>GetJoueur</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("NomJoueur")
        </th>
        <th>
            @Html.DisplayName("Prenom")
        </th>
        <th>
            @Html.DisplayName("DateNaissance")
        </th>
        <th>
            @Html.DisplayName("SalaireHebdomadaire")
        </th>
        <th>
            @Html.DisplayName("Position")
        </th>
        <th>
            @Html.DisplayName("NomEquipe")
        </th>
        <th>
            @Html.DisplayName("NomPrenomAgent")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ListeJoueurVM)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomJoueurM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrenomM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateNaissanceM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaireHebdomadaireM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomEquipeM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomPrenomAgentM)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditJoueur", new { idContinent = item.FkContinentM, idPays = item.FkPaysM, idEquipe = item.FkEquipeM, idPosition = item.FkPositionM, idJoueur = item.IdM }) |
                @Html.ActionLink("Details", "DetailsJoueur", new { idContinent = item.FkContinentM, idPays = item.FkPaysM, idEquipe = item.FkEquipeM, idPosition = item.FkPositionM, idJoueur = item.IdM })
                
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back", "GetEquipe", new { idContinent = Model.ListeJoueurVM.FirstOrDefault().FkContinentM,
                                                idPays = Model.ListeJoueurVM.FirstOrDefault().FkPaysM,
                                                idEquipe = Model.ListeJoueurVM.FirstOrDefault().FkEquipeM })
</div>